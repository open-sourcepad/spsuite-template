nav(aria-label='breadcrumb')
  ol.breadcrumb
    li.breadcrumb-item
      a('[routerLink]'="['/']") Home
    li.breadcrumb-item
      a UI Elements
    li.breadcrumb-item.active(aria-current='page') Forms

.row.mb-4
  .col-md-6
    .card
      .card-body
        h4.card-title
          span Datepicker
        .mrg-top-50


  .col-md-6
    .card
      .card-body
        h4.card-title
          span Forms

        .form-row
          .form-group.col-md-6
            label(for='inputEmail4') Email
            input#inputEmail4.form-control(type='email', placeholder='Email')
          .form-group.col-md-6
            label(for='inputPassword4') Password
            input#inputPassword4.form-control(type='password', placeholder='Password')
        .form-group
          label(for='inputAddress') Address
          input#inputAddress.form-control(type='text', placeholder='1234 Main St')
        .form-group
          label(for='inputAddress2') Address 2
          input#inputAddress2.form-control(type='text', placeholder='Apartment, studio, or floor')
        .form-row
          .form-group.col-md-6
            label(for='inputCity') City
            input#inputCity.form-control(type='text')
          .form-group.col-md-4
            label(for='inputState') State
            select#inputState.form-control
              option(selected='') Choose...
              option ...
          .form-group.col-md-2
            label(for='inputZip') Zip
            input#inputZip.form-control(type='text')
        .form-group
          .form-check
            input#gridCheck.form-check-input(type='checkbox')
            label.form-check-label(for='gridCheck')
              | Check me out
